<?xml version="1.0"?>
<ruleset name="WooCommerce Coding Standards">

	<description>WooCommerce Sniffs dev ruleset for payplug-woocommerce.</description>

	<!-- Rules -->
	<rule ref="WooCommerce-Core"/>

	<!-- Configs -->
	<config name="testVersion" value="7.0-" />

	<!-- Check all PHP files in src directory tree by default. -->
	<arg name="extensions" value="php"/>
	<file>src</file>

	<!-- Generate the report.txt file -->
	<arg name="report-file" value="report.txt"/>

</ruleset>
